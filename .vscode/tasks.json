{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        // Ask dotnet build to generate full paths for file names.
        "/property:GenerateFullPaths=true",
        // Do not generate summary otherwise it leads to duplicate errors in Problems panel
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clear",
      "command": "rmdir *\\**\\obj, *\\**\\bin -Recurse",
      "type": "shell",
      "group": "none",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "clear-coverage",
      "command": "rmdir *\\TestResults -Recurse",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "test-unit",
      "command": "dotnet test .\\tests\\unit --collect:'XPlat Code Coverage' --settings '.\\tests\\runsettings.xml'",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always"
      },
      "dependsOn": "clear-coverage"
    },
    {
      "label": "test-integration",
      "command": "dotnet test .\\tests\\examples --collect:'XPlat Code Coverage' --settings '.\\tests\\runsettings.xml'",
      "type": "shell",
      "group": "test",
      "presentation": {
        "reveal": "always"
      },
      "dependsOn": "clear-coverage"
    }
  ]
}
